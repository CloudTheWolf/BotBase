<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Michael Howard</Authors>
    <Company>CloudTheWolf Ltd</Company>
    <AssemblyVersion>1.0.0.1</AssemblyVersion>
    <FileVersion>1.0.0.1</FileVersion>
    <Version>1.0.0.1</Version>
    <AssemblyName>ctw.BotCore</AssemblyName>
    <Product>BotCore</Product>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/CloudTheWolf/BotBase</RepositoryUrl>
    <Description>Core Bot Classes.</Description>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>Discord, DSharpPlus,ctw</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Copyright>&amp;copy; 2020 CloudTheWolf Ltd</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="config.json" />
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ctw.BotShared" Version="1.0.2" />
    <PackageReference Include="DSharpPlus" Version="4.0.0-nightly-00703" />
    <PackageReference Include="DSharpPlus.CommandsNext" Version="4.0.0-nightly-00703" />
    <PackageReference Include="DSharpPlus.Interactivity" Version="4.0.0-nightly-00703" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="1.1.0" />
    <PackageReference Include="ctw.BotLogger" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Plugins\Example.Module.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
